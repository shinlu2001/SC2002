{
    "name": "Java 21 Environment",
    "image": "mcr.microsoft.com/devcontainers/base:ubuntu", // base Ubuntu image
    "features": {
      "ghcr.io/devcontainers/features/java:1": {
        "version": "21",
        "installMaven": "true",
        "installGradle": "false"
      }
    },
    "postCreateCommand": "echo \"This file was added by the postCreateCommand.\" > TEMP.md",
    "customizations": {
      "vscode": {
        "extensions": [
          "streetsidesoftware.code-spell-checker",
          "vscjava.vscode-java-pack"
        ]
      }
    }
  }
  